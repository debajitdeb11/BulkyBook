@model Category
@{
    ViewData["Create"] = "Create Category";
}

<div>
    <form method="post">
        <div class="form-group row">
            <div class="col-sm-10">
                <input type="text" asp-for="Name" placeholder="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <input type="text" asp-for="DisplayOrder" placeholder="Display Order">
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Add</button>
            </div>
        </div>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>

